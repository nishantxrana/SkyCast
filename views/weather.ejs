<%- include("partials/header.ejs") %>
<div class="wrapper">
  <header>
    <i class="bx bx-left-arrow-alt" onclick="window.location.href='/'"></i
    >Weather App
  </header>
  <section class="weather-part">
    <% if (content.cod == 200) { %> <% if (content.id == 800) { %>
    <img src="icons/clear.svg" alt="Weather Icon" />
    <% } else if (content.id >= 200 && content.id <= 232) { %>
    <img src="icons/storm.svg" alt="Weather Icon" />
    <% } else if (content.id >= 600 && content.id <= 622) { %>
    <img src="icons/snow.svg" alt="Weather Icon" />
    <% } else if (content.id >= 701 && content.id <= 781) { %>
    <img src="icons/haze.svg" alt="Weather Icon" />
    <% } else if (content.id >= 801 && content.id <= 804) { %>
    <img src="icons/cloud.svg" alt="Weather Icon" />
    <% } else if ((content.id >= 500 && content.id <= 531) || (content.id >= 300
    && content.id <= 321)) { %>
    <img src="icons/rain.svg" alt="Weather Icon" />
    <% } %> <% } else { %>
    <p>No weather data available</p>
    <% } %>

    <div class="temp">
      <span class="numb"> <%= Math.floor(content.temp) %> </span>
      <span class="deg">°</span>C
    </div>
    <div class="weather"><%= content.description %></div>
    <div class="location">
      <i class="bx bx-map"></i>
      <span> <%= content.city %> <%= content.country %> </span>
    </div>

    <div class="bottom-details">
      <div class="column feels">
        <i class="bx bxs-thermometer"></i>
        <div class="details">
          <div class="temp">
            <span class="numb-2"> <%= Math.floor(content.feels_like) %> </span>
            <span class="deg">°</span>C
          </div>
          <p>Feels like</p>
        </div>
      </div>

      <div class="column humidity">
        <i class="bx bxs-droplet-half"></i>
        <div class="details">
          <span> <%= content.humidity %> </span>
          <p>Humidity</p>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include("partials/footer.ejs") %>
